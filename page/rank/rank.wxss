.rank{padding-top:10%;height:100vh;overflow:hidden;}
.rank-content{height:100%;padding-top:40px;}
.rank-scroll{width:100%;height:100%;}
.rank-menu{position:fixed;z-index:100;left:0;top:0;width:100%;padding-top:5%;overflow:hidden;}
.menu-main{width:80%;max-width:420px;height:46px;margin:0 auto;padding:0;border-radius:5px;overflow:hidden;}
.menu-main .menu-item{height:100%;padding:0 5px;line-height:42px;text-align:center;background:#FFF;}
.menu-item image{display:inline-block;max-width:80%;height:auto;margin:0 auto;vertical-align:middle;}
.menu-item image.img-friend{width:100px;}
.menu-item image.img-all{width:80px;}
.rank.friend .menu-item.menu-friend, .rank.all .menu-item.menu-all{background:#fb7b0e;}
.rank.all .menu-item.menu-friend, .rank.friend .menu-item.menu-all{background:#FFF;}
.rank-list{width:84%;max-width:640px;margin:0 auto;padding-bottom:50px;}
.rank-li{margin:20px 0;}
.rank-li .li-cell{float:left;height:46px;line-height:46px;}
.rank-li .li-sort{width:15%;}
.rank-li .li-face{width:20%;}
.rank-li .li-nick{width:20%;}
.rank-li .li-level{width:33%;}
.rank-li .li-score{width:12%;white-space:nowrap;}
.rankme-line{margin:10px 0;text-align:center;}
.li-sort .sort-box{position:relative;display:inline-block;width:32px;height:32px;font-size:14px;text-align:center;line-height:32px;border-radius:50%;background:#80c269;vertical-align:middle;}
.li-face image.img-face{display:inline-block;width:46px;height:auto;max-width:96%;border-radius:50%;overflow:hidden;vertical-align:middle;background:#FFF;}
.li-nick .nick-text{display:inline-block;max-width:50px;font-size:13px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.li-level .iconstar{margin-left:5px;margin-top:-3px;vertical-align:middle;}
.rank-more{position:fixed;z-index:10;left:50%;bottom:10px;width:60px;margin-left:-30px;text-align:center;}
.rank-more .img-more{display:block;width:50px;height:auto;margin:0 auto;}
button.rank-more.button-hover{border:0 none;-webkit-transform:translateY(5px);transform:translateY(5px);}
/* hat */
.sort-hat{display:inline-block;position:absolute;z-index:1;left:50%;top:0;width:42px;height:28px;margin:-20px 0 0 -21px;background:url("data:image/png;base64,") no-repeat;background-size:42px auto;}
.sort-box.first .sort-hat{background-position:0 0;}
.sort-box.second .sort-hat{background-position:0 -30px;}
.sort-box.third .sort-hat{background-position:0 -60px;}
.sort-box.no .sort-hat{display:none;}
.sort-box.first,.sort-box.second,.sort-box.third{background:#eb6100;}
