.sign-title{text-align:center;padding:2% 5% 0 5%;}
.sign-title .img-title{display:block;width:96%;max-width:640px;height:auto;margin:0 auto;}
.sign-map{position:relative;margin-top:-30px;}
.sign-map .img-map{display:block;width:100%;height:auto;}
.sign-map .sign-level{position:absolute;z-index:10;left:0;top:0;width:100%;}
.sign-handle{position:absolute;z-index:100;width:100%;height:100%;left:0;top:0;text-align:center;}
.sign-btn{position:absolute;right:5%;bottom:5%;width:34%;max-width:420px;}
.sign-btn image{display:block;width:100%;}
.overlayer{position:fixed;z-index:20;left:0;top:0;width:100%;height:100vh;background:rgba(0,0,0,0.1);}
.anim-title{animation-name:fadeIn;animation-duration:500ms;animation-delay:0;}
.anim-map{animation-name:zoomIn;animation-duration:800ms;animation-delay:500ms;}
.anim-sign{animation: jump 1500ms ease-in-out infinite;}