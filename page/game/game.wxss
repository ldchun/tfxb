.game{background:transparent;}
.question-num{height:32px;margin:20px auto;line-height:32px;text-align:center;white-space:nowrap;}
.question-num .num-line{display:inline-block;width:60px;height:2px;background:#FFF;vertical-align:middle;}
.question-num .num-val{display:inline-block;min-width:60px;margin:0 25px;font-size:28px;vertical-align:middle;}
.question-title{min-height:90px;padding:20px 40px;font-size:19px;text-align:center;}
.question-title .title-text{display:inline-block;text-align:left;}
.question-main{position:relative;padding:10px 80px;min-height:280px;}
.count-box,.score-box{position:absolute;z-index:1;top:0;width:50px;height:100%;max-height:300px;padding:20px 0px;}
.count-box{left:0;margin-left:30px;}
.score-box{right:0;margin-right:30px;}
.option-box{padding:5px 10px;}
.option-item{min-height:40px;margin:20px 0;}
.option-item .option-btn{display:block;position:relative;min-height:40px;height:auto;padding:10px;line-height:18px;background:#FFF;color:#152b75;text-align:center;white-space:normal;word-break:break-all;border:0 none;border-radius:5px;}
.option-text{display:inline-block;line-height:1.2;}
.option-btn .option-symbol{width:20px;text-align:center;visibility:hidden;}
.choicea .optiona.option-err,.choiceb .optionb.option-err,
.choicec .optionc.option-err,.choiced .optiond.option-err{color:#FFF;background:#f19149;}
.choiceok .option-ok,.choicea .option-ok,.choiceb .option-ok,
.choicec .option-ok,.choiced .option-ok{color:#FFF;background:#8fc31f;}
.choiceok .option-ok .option-btn .option-symbol.symbol-right,
.choicea .option-ok .option-btn .option-symbol.symbol-right,
.choiceb .option-ok .option-btn .option-symbol.symbol-right,
.choicec .option-ok .option-btn .option-symbol.symbol-right,
.choiced .option-ok .option-btn .option-symbol.symbol-right{visibility:visible;}
.choicea .optiona.option-err .option-btn .option-symbol.symbol-error,
.choiceb .optionb.option-err .option-btn .option-symbol.symbol-error,
.choicec .optionc.option-err .option-btn .option-symbol.symbol-error,
.choiced .optiond.option-err .option-btn .option-symbol.symbol-error{visibility:visible;}
/*progress*/
.progress-box,.progress, .progress-con{position:relative;width:18px;height:100%;margin:0 auto;}
.progress-hd{height:25px;margin-top:-25px;}
.progress-hd image{width:20px;height:20px;}
.progress-con .progress-bar{position:relative;left:0;bottom:0;width:16px;height:100%;border-radius:40px;background:#FFF;overflow:hidden;}
.progress-bar .bar-hl{position:absolute;left:0;bottom:0;width:100%;background:#7ECEF4;}
.score-total .progress-bar .bar-hl{background:#32B16C;}
.progress-con .progress-max,.progress-con .progress-min,.progress-tip{position:absolute;left:auto;right:25px;width:42px;line-height:1;}
.progress-con .progress-max{top:-10px;}
.progress-con .progress-min{bottom:-10px;}
 .progress .progress-tip{line-height:1px;}
.progress.left{text-align:right;}
.progress.right{text-align:left;}
.progress.right .progress-con .progress-max,.progress.right .progress-con .progress-min,
.progress.right .progress-tip{left:20px;right:auto;}
.anim-time{-webkit-transition:all 1000ms linear;transition:all 1000ms linear;}
.anim-score{-webkit-transition:all 500ms ease-in-out;transition:all 500ms ease-in-out;}
/*grade  */
.grade{position:absolute;z-index:100;left:0;top:0;width:100%;height:100%;padding:10px 0;background:transparent;}
.grade-main{position:relative;padding:0 5%;}
.grade-main image.grade-bg{width:100%;}
.grade-main .grade-info{position:absolute;z-index:10;left:50%;top:50%;width:36%;height:40%;margin-left:-18%;margin-top:-18%;text-align:center;}
.grade-star .starhide{display:none;}
.grade-info .grade-score{font-size:28px;font-weight:bold;line-height:1;letter-spacing:2px;}
.grade-bag{width:70%;margin:8% auto 0 auto;text-align:center;}
.grade-bag .img-bag{width:100%;}
.anim-gradescore{animation-name:zoomIn;animation-duration:500ms;animation-delay:0;}
.anim-gradebag{animation-name:slideInUpBig;animation-duration:500ms;animation-delay:500ms;}
.anim-questionnumer{animation-name:fadeIn;animation-duration:500ms;animation-delay:0;}
.anim-questiontitle{animation-name:zoomIn;animation-duration:500ms;animation-delay:500ms;}
.anim-option{animation-name:zoomIn;animation-duration:500ms;animation-delay:1000ms;}
.anim-resstar{-webkit-transition:width 1500ms linear 500ms;transition:width 1500ms linear 500ms;}
/*audio*/
.audio-answer{display:none;}